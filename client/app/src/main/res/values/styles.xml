    </style>

    <style name="AppStartup" parent="AppTheme">
        <item name="android:windowBackground">@drawable/startupbg</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomMatisseStyle" parent="Matisse.Zhihu">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="NumberKeyBoardStyle2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/keyboard_effect_key_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
    </style>
    <!-- fab 灰边 白色-->
    <style name="TodayFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="colorControlHighlight">@color/gray</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <!-- fab 白色 圆 波纹-->
    <style name="Selected_BackgroundWhite">
        <item name="android:background">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
    <!-- Button 灰边 白底 波纹-->
    <style name="Button_Selected_BackgroundWhite">
        <item name="android:background">@drawable/bg_circle_lineback</item>
        <item name="backgroundTintMode">screen</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Button 灰边 蓝底 波纹-->
    <style name="Button_Selected_BackgroundBlue">
        <item name="android:background">@drawable/btn_shape_blue_bg</item>
        <item name="backgroundTintMode">screen</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
    <!-- TextView 点击效果 -->
    <style name="TextSelectedBackground">
        <item name="android:clickable">true</item>
        <item name="backgroundTintMode">screen</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="LayoutTextSelected" parent="TextSelectedBackground">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 文字加粗 -->
    <style name="text_bold_white">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditScreenTextInputLayoutStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimary</item>
<!--        <item name="colorControlActivated">@color/textInputLayout</item>-->
<!--        <item name="colorControlHighlight">@color/textInputLayout</item>-->
<!--        <item name="colorAccent">@color/textInputLayout</item>-->
<!--        <item name="android:textColorHint">@color/textInputLayout</item>-->
        <item name="android:padding">8dp</item>
    </style>

    <color name="black">#000000</color>
    <color name="gray">#B4B3B3</color>
    <color name="white">#FFFFFF</color>
</resources>